<div class="container">
<h1>Login</h1>

<form ng-submit="auth_ctrl.login()">
  <div class="form-group">
    <label>Email Address
      <input type="email" class="form-control" placeholder="Email" ng-model="auth_ctrl.user.email">
    </label>
  </div>
  <div class="form-group">
    <label>Password
      <input type="password" class="form-control" placeholder="Password" ng-model="auth_ctrl.user.password">
    </label>
  </div>

  <input type="submit" class="btn btn-default" value="Login">
</form>
</div>